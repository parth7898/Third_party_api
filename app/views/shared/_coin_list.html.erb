 <%= form_with(url: "/coin-data", method: "get") do |f|%>
    <%= f.label(:query, "Search") %>
    <%= f.text_field(:query, placeholder: "Search by name or id") %>
    <%= f.submit("Search") %>
  <% end %>

<table  class="table" >                         
  <tr>                          
    <th>id</th>
    <th>name</th>
    <th>symbol</th>
  </tr>
    <% @result.each do |data| %>  
      <tr>
        <td><%= data.coin_id %></td>  
        <td><%= data.name%></td>  
        <td><%= data.symbool%></td> 
      </tr>
    <% end %>                      
</table> 